{
    "env": {
        "browser": true,
        "es2021": true,
        "node":    true,
        "jquery":  true,
        "amd":     true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "off",
        "bracketSpacing": "off",
        "bracketSameLine": "off",
        "jsxBracketSameLine": "off"
    },
    "globals": {
        "wp":     true,
        "jQuery": true
    }
}
